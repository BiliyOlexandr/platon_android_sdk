<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_randomize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RANDOMIZE"/>

        <EditText
            android:id="@+id/etxt_trans_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Trans ID"/>

        <EditText
            android:id="@+id/etxt_payer_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Payer Email"/>

        <EditText
            android:id="@+id/etxt_card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Card Number"/>

        <Button
            android:id="@+id/btn_get_trans_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GET_TRANS_DETAILS"/>

        <EditText
            android:id="@+id/etxt_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Response"
            android:minHeight="200dp"/>

    </LinearLayout>

</ScrollView>